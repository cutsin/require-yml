root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = tab
trim_trailing_whitespace = false

[*.{pug,jade}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space

[*.py]
indent_style = tab

[*.js]
indent_style = space
